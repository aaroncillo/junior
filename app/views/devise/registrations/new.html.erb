<div class="custom-login-form mt-2 w-full sm:w-3/4 md:w-1/2 mx-auto">
  <h2 class="title">Registro</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
    <%= f.error_notification %>

    <!-- Email Input -->
    <%= f.input :email,
                required: true,
                label: false,
                autofocus: true,
                input_html: { autocomplete: "email", placeholder: "Email", class: "input" }
    %>

    <!-- Password Input -->
    <%= f.input :password,
                required: true,
                label: false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", placeholder: "Password", class: "input" }
    %>

    <!-- Password Confirmation Input -->
    <%= f.input :password_confirmation,
                required: true,
                label: false,
                input_html: { autocomplete: "new-password", placeholder: "Confirm Password", class: "input" }
    %>

    <%= f.button :submit, "Sign up", class: "btn-success" %>
  <% end %>
  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
